<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ApiFood" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:windowContentTransitions">true</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/basil_800</item>
        <item name="colorPrimaryVariant">@color/basil_300</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:textColorPrimary">@color/basil_orange_800</item>
        <item name="android:textColorSecondary">@color/basil_800</item>


        <item name="android:colorBackground">@color/basil_50</item>
        <item name="colorSurface">@color/basil_50</item>

        <item name="colorOnSurface">@color/basil_800</item>
        <item name="colorOnBackground">@color/basil_800</item>

        <item name="textAppearanceHeadline5">@style/TextAppearance.App.Headline5</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.App.Headline4</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/basil_orange_800</item>
        <item name="colorSecondaryVariant">@color/basil_orange_800</item>
        <item name="colorOnSecondary">@color/basil_800</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ApiFood.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/basil_500</item>
        <item name="android:windowBackground">@color/basil_500</item>
        <item name="colorPrimary">@color/basil_50</item>
        <item name="colorOnPrimary">@color/basil_800</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
    </style>

    <!-- Bottom Navigation View style -->
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/basil_800</item>
        <item name="colorOnPrimary">@color/basil_800</item>
    </style>

</resources>